<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li>
    <% status = task.completed ? "✅" : "❌"%>
    <%= "#{status} - "  %>
    <%= link_to task.title, task_path(task) %>
    <%= " - " %>
    <%= link_to 'Edit', edit_task_path(task) %>
    <%= " - " %>
    <%= link_to "🗑", task_path(task),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
  <p>
    <%= "➕" %>
    <%= link_to 'Add a new task', new_task_path %>
  </p>
</ul>
